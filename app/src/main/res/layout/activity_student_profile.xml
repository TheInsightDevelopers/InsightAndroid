<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images__3_"
    tools:context=".student_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:paddingStart="20dp"
        android:paddingEnd="1dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/student_profile"
        android:textColor="#1EE539"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name333"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#FDD835"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/student_name_2"
                android:textAlignment="viewStart"
                android:textColor="#D81B60"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_id333"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#FDD835"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_id"
                android:textAlignment="viewStart"
                android:textColor="#D81B60"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/standard333"
                android:textAlignment="viewStart"
                android:textColor="#FDD835"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_profile_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/standard"
                android:textAlignment="viewStart"
                android:textColor="#D81B60"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/institute_name333"
                android:textAlignment="viewStart"
                android:textColor="#FDD835"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_profile_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/institute_name"
                android:textAlignment="viewStart"
                android:textColor="#D81B60"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/favourite_subject333"
                android:textAlignment="viewStart"
                android:textColor="#FDD835"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_profile_fav_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/favourite_subject4444"
                android:textAlignment="viewStart"
                android:textColor="#D81B60"
                android:textSize="24sp"
                android:textStyle="bold" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="@string/upload_video_student_profile"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:onClick="startVideoUpload"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/stud_profile_update_btn_act"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="@string/edit_profile"
                android:textAlignment="center"
                android:textColor="#FDF9F8"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/student_sign_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:text="@string/sign_out"
                android:textColor="@color/white"
                android:onClick="signOutUser"
                android:textSize="24sp"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="@string/delete_account"
                android:textAlignment="center"
                android:textColor = "#E80909"
                android:textColorHighlight="#EC1111"
                android:textSize="24sp"
                android:onClick="deleteAccount"
                android:layout_marginBottom="40dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>